{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node","jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules","test/*.test.ts"]
}
